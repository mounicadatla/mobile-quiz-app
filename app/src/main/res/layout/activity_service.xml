<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mdatla1.mymobilepopquiz.ServiceActivity">
    <TextView
        android:id="@+id/activity_service_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="hello"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/activity_service_start"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="Start Service"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/activity_service_stop"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:text="Stop Service"
        android:layout_below="@+id/activity_service_start"
        android:gravity="center"
        android:textSize="30sp"/>

</RelativeLayout>
